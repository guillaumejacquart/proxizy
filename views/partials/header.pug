.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/admin')
        i.fa.fa-cube
        | Proxizy
    .collapse.navbar-collapse
      if (title != 'Login' && title != 'Account Management' && title != 'Proxy error')
        ul.nav.navbar-nav
          li(class=(title == 'Home') ? 'active' : undefined)
            a(href='/admin') Home
          li(class=(title == 'Apps') ? 'active' : undefined)
            a(href='/admin/apps') Apps
          li(class=(title == 'Users') ? 'active' : undefined)
            a(href='/admin/users') Users
          li
            a(href='/status') Status
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          if noAdmin
            li(class=(title == 'Create Account') ? 'active' : undefined)
              a(href='/admin/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span= user.email || user._id
              i.caret
            ul.dropdown-menu
              li
                a(href='/admin/account') My Account
              li.divider
              li
                a(href='/admin/logout') Logout
